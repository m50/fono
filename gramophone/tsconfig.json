{
  "extends": "../tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    },
    "module": "commonjs",
    "noEmit": false,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "migrate.ts",
    "prepare.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.snap.*"
  ]
}
