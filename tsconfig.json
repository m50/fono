{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "typeRoots": [
      "packages/gramophone/src/@types",
      "packages/record/src/@types",
      "packages/horn/src/@types",
      "packages/player/src/@types",
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true
  }
}
