{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "esnext",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "typeRoots": [
      "node_modules/@types",
      "gramophone/src/@types",
      "record/src/@types"
    ],
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.snap.*"
  ]
}
