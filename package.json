  "workspaces": ["gramophone", "horn", "record"],
  "scripts": {
    "install-esbuild": "node ./node_modules/esbuild/install.js",
    "start:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "start": "docker-compose up",
    "build:record": "docker build -t ghcr.io/m50/fono/record:latest -f record/Dockerfile .",
    "build:gramophone": "docker build -t ghcr.io/m50/fono/gramophone:latest -f gramophone/Dockerfile .",
    "r": "yarn workspace @fono/record",
    "g": "yarn workspace @fono/gramophone",
    "postinstall": "test -f .env || (cp .env.example .env && touch gramophone/.env && touch record/.env && echo 'âœ¨  Created new .env file!')"
  }
}
