{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "dom",
      "esnext",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "paths": {
      "types/*": ["./src/@types/*"],
      "*": ["./src/*"]
    },
    "jsx": "react",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "out",
    "**/*.snap.*"
  ]
}
