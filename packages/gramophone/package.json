{
  "name": "@fono/gramophone",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Marisa Clardy",
    "url": "https://clardy.eu",
    "email": "marisa@clardy.eu"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "babel-plugin-tsconfig-paths",
        {
          "relative": true,
          "tsconfig": "./tsconfig.json",
          "rootDir": "."
        }
      ]
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.json,.gql,.graphql",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "src/**/*.snap.ts"
    ],
    "exec": "(yarn build && yarn start) || exit 1"
  },
  "scripts": {
    "install-bcrypt": "cd ../../node_modules/bcrypt && npm run install",
    "start:dev": "NODE_ENV=development yarn install-bcrypt && nodemon",
    "start": "node dist/index.js",
    "build": "../player/player build -v",
    "test": "jest -c config/jest.config.js --silent",
    "test:noisy": "jest -c config/jest.config.js",
    "lint": "eslint src -c config/.eslintrc.js --ext .js,.ts",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint --quiet",
    "lint:types": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "@fono/horn": "1.0.0",
    "@fono/record": "1.0.0",
    "apollo-server-fastify": "^2.24.0",
    "bcrypt": "^5.0.1",
    "chalk": "^4.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^9.0.0",
    "dotenv-expand": "^5.1.0",
    "fastify": "^3.15.1",
    "fastify-cors": "^6.0.1",
    "fastify-helmet": "^5.3.1",
    "fastify-websocket": "^3.2.0",
    "glob": "^7.1.7",
    "glob-promise": "^4.1.0",
    "graphql": "^15.5.0",
    "graphql-type-json": "^0.3.2",
    "knex": "^0.95.4",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0",
    "mysql": "^2.18.1",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "spotify-web-api-node": "^5.0.2",
    "whatwg-fetch": "^3.6.2",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.16",
    "@babel/runtime": "^7.14.0",
    "@jest/types": "^26.6.2",
    "@types/bcrypt": "^3.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/spotify-web-api-node": "^5.0.2",
    "@types/luxon": "^1.26.5",
    "@types/node": "^15.0.2",
    "@types/pluralize": "^0.0.29",
    "@types/ws": "^7.4.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-tsconfig-paths": "^1.0.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "json-schema-to-typescript": "^10.1.4",
    "nodemon": "^2.0.7",
    "pluralize": "^8.0.0",
    "prettier": "^2.2.1",
    "sqlite3": "^5.0.2",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.2.10",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "yargs": "^17.0.1"
  }
}
