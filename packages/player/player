#!/usr/bin/env sh
DIR="$( cd "$( dirname "${0}" )" &> /dev/null && pwd )"

if ls "${DIR}/dist/meta.json" > /dev/null 2>&1; then
    tool=$(which node)
    exec "${tool}" "${DIR}"/dist/index.js "$@"
    exit
fi

tool=$(which ts-node)
exec "${tool}" -r tsconfig-paths/register "${DIR}"/src/index.ts "$@"
