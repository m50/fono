{
  "name": "@fono/player",
  "version": "1.0.0",
  "description": "The cli tool for managing fono.",
  "main": "src/",
  "repository": "https://github.com/m50/fono",
  "author": {
    "name": "Marisa Clardy",
    "url": "https://clardy.eu",
    "email": "marisa@clardy.eu"
  },
  "license": "MIT",
  "bin": {
    "player": "./player"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "babel-plugin-tsconfig-paths",
        {
          "relative": true,
          "tsconfig": "./tsconfig.json",
          "rootDir": "."
        }
      ]
    ]
  },
  "scripts": {
    "install-esbuild": "node ../../node_modules/esbuild/install.js",
    "test": "jest -c config/jest.config.js --silent",
    "test:noisy": "jest -c config/jest.config.js",
    "lint": "eslint src -c config/.eslintrc.js --ext .js,.ts",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint --quiet",
    "lint:types": "tsc --noEmit --pretty",
    "build": "./player build"
  },
  "dependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.14",
    "@babel/runtime": "^7.14.0",
    "@fono/gramophone": "1.0.0",
    "babel-plugin-tsconfig-paths": "^1.0.1",
    "chalk": "^4.1.0",
    "esbuild": "^0.11.20",
    "glob-promise": "^4.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.14",
    "@babel/runtime": "^7.14.0",
    "@jest/types": "^27.0.2",
    "@types/jest": "^26.0.23",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-jest": "^27.0.2",
    "babel-plugin-tsconfig-paths": "^1.0.1",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.2"
  }
}
